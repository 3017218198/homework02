<!--the size of main window is reset by the following code-->
    <Window x:Class="homework02c.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:homework02c"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
        
    <Grid>
        <!--the location and size of the button is reset by the following code-->
        <!--the content of the button is changed to "hello"-->
        <!--the click is renamed as "Hello_Click"-->
        <Button Content="Hello" 
                HorizontalAlignment="Left" 
                Click ="Hello_Click" 
                Height="100" 
                Margin="300,100,0,0" 
                VerticalAlignment="Top" 
                Width="200"/>
        <!--the location and size of the button is reset by the following code-->
        <!--the content of the button is changed to "hellowithargs"-->
        <!--the click is renamed as "HelloWithArgs_Click"-->
        <Button Content="HelloWithArgs" 
                HorizontalAlignment="Left" 
                Click="HelloWithArgs_Click"
                Height="100"
                Margin="300,250,0,0" 
                VerticalAlignment="Top" 
                Width="200"/>

    </Grid>
</Window>
